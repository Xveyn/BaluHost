{
  "compilerOptions": {
    "rootDir": "src/main",
    "outDir": "dist/main",
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "dist"]
}
