{
  "name": "baludesk-frontend",
  "version": "1.0.0",
  "description": "BaluDesk Desktop Client - Electron Frontend",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run compile && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "compile": "tsc -p tsconfig.main.json",
    "clean": "rimraf dist-electron dist",
    "build": "vite build && npm run compile && electron-builder",
    "build:dir": "vite build && npm run compile && electron-builder --dir",
    "lint": "eslint .",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^33.4.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.49",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.baluhost.baludesk",
    "productName": "BaluDesk",
    "asar": true,
    "asarUnpack": "**/*.{node,dll,exe}",
    "npmRebuild": false,
    "removePackageScripts": false,
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/main/**/*",
      "dist/assets/**/*",
      "dist/index.html",
      "package.json",
      "../backend/build/Release/baludesk-backend.exe",
      "../backend/build/Release/*.dll"
    ],
    "extraResources": [
      {
        "from": "../backend/build/Release/",
        "to": "backend",
        "filter": [
          "*.exe",
          "*.dll"
        ]
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
