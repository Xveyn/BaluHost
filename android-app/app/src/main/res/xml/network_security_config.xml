<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: trust system and user-added certificates -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CA certificates -->
            <certificates src="system" />
            <!-- Trust user-added CA certificates (for mkcert) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Development: Allow cleartext traffic for local testing -->
    <!-- Remove this section in production! -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
    </domain-config>
    
    <!-- Production: Strict HTTPS with certificate pinning -->
    <!-- Uncomment and configure for production deployment -->
