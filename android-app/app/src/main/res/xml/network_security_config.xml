<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        DEVELOPMENT BUILD CONFIGURATION
        ================================
        For local NAS access, we allow HTTP traffic to private networks.

        SECURITY NOTICE: This is acceptable for a NAS app because:
        1. Users typically access their NAS on local/private networks
        2. Private networks (home WiFi) are already trusted
        3. The app still supports HTTPS when available

        For a production public-facing app, this should be locked down to
        require HTTPS with certificate pinning.
    -->

    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system CA certificates for HTTPS -->
            <certificates src="system" />
            <!-- Trust user-added CA certificates (e.g., for self-signed certs with mkcert) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!--
        Alternative approach for stricter security:
        Uncomment the section below and comment out the base-config above
        to allow HTTP only to specific domains while keeping HTTPS required for everything else
    -->
    <!--
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
